# Muscle Dreamer プロジェクト用 EditorConfig
# 全エディタで統一されたコーディングスタイルを強制

root = true

# 全ファイルのデフォルト設定
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go言語ファイル（タブインデント）
[*.go]
indent_style = tab
indent_size = 4

# Makefileファイル（タブインデント必須）
[Makefile]
indent_style = tab
indent_size = 4

[makefile]
indent_style = tab
indent_size = 4

# YAML設定ファイル
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON設定ファイル
[*.json]
indent_style = space
indent_size = 2

# Dockerファイル
[Dockerfile*]
indent_style = space
indent_size = 2

# シェルスクリプト
[*.sh]
indent_style = space
indent_size = 2

# Markdown文書
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# HTML/CSS/JavaScript (Web部分)
[*.{html,css,js,ts}]
indent_style = space
indent_size = 2

# 設定ファイル
[*.toml]
indent_style = space
indent_size = 2

# GitIgnore等
[.gitignore]
indent_style = space
indent_size = 2